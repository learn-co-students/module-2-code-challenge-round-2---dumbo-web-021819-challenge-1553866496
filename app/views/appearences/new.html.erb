<h1>New appearences!!</h1>


<%= form_for @appearence do |f| %>
<h2> <%= f.label :Guest %> </h2>
<%= f.collection_select :guest_id, Guest.all, :id, :name %>
<br>
<h2> <%= f.label :Episode %> </h2>
<%= f.collection_select :episode_id, Episode.all, :id, :number %>
<br>
<h2> <%= f.label :Rating %> </h2>
<%= f.number_field :rating, in: 1..5 %>
<br>
<br>
<%= f.submit value: "Create Appearence" %>
<% end %>
